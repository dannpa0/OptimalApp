<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".fragment.PemasokFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="15dp">

            <EditText
                android:id="@+id/search_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_toStartOf="@+id/ib_search"
                android:background="@drawable/search_layout"
                android:ems="15"
                android:fontFamily="@font/roboto_bold"
                android:hint="Cari Pemasok"
                android:inputType="textPersonName"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:paddingRight="20dp"
                android:paddingBottom="15dp"
                android:textColor="#636262"
                android:textColorHint="#636262"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/ib_search"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignTop="@+id/search_field"
                android:layout_alignBottom="@+id/search_field"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/border_search"
                android:src="@drawable/ic_search" />

        </RelativeLayout>

        <include
            android:id="@+id/layout_pemasok_kosong"
            layout="@layout/layout_pemasok_kosong" />

        <include
            android:id="@+id/layout_pemasok_ada"
            layout="@layout/layout_pemasok_ada"
            android:visibility="gone" />

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_pemasok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:backgroundTint="@color/colorBlue"
        android:elevation="6dp"
        android:src="@drawable/ic_add_white"
        app:fabSize="normal" />

</RelativeLayout>
