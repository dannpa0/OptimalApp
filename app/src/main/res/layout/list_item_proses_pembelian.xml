<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/border_grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_judul_no_pesanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No.Pesanan"
                android:textSize="12sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/tv_no_pesanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OR/02082019/01"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/tv_tgl_pesanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 September 2019"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/colorBlack"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_judul_total_harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Harga"
                android:textSize="12sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/tv_total_harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 100.000"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/colorBlack"/>

        </LinearLayout>

