<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_list_penjualan"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_margin="10dp"
    android:background="@drawable/container_barang"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingTop="8dp"
    android:paddingRight="16dp"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/im_icon_struk"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginRight="16dp"
        android:layout_weight="1"
        android:padding="4dp"
        android:src="@drawable/ic_struk" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/no_struk_penjualan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/im_icon_struk"
            android:fontFamily="@font/roboto_bold"
            android:text="#INV-12345RM"
            android:textAllCaps="false"
            android:textColor="@color/colorDarkGray"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/total_harga_penjualan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/roboto_bold"
            android:text="Rp. 215000"
            android:textAllCaps="false"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/keterangan_pembayaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/roboto_regular"
            android:text="Lunas"
            android:textAllCaps="false"
            android:textColor="@color/colorBlack"
            android:textSize="10sp" />


        <TextView
            android:id="@+id/jam_list_penjualan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/keterangan_pembayaran"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:text="18:20"
            android:textAllCaps="false"
            android:textColor="@color/colorDarkGray"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/tanggal_list_penjualan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/no_struk_penjualan"
            android:layout_toRightOf="@+id/im_icon_struk"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:text="14 Agustus 2019"
            android:textAllCaps="false"
            android:textColor="@color/colorDarkGray"
            android:textSize="9sp" />


    </LinearLayout>


</LinearLayout>
