<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".fragment.PelangganFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="15dp">

            <EditText
                android:id="@+id/search_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_toStartOf="@+id/ib_search"
                android:background="@drawable/search_layout"
                android:ems="15"
                android:fontFamily="@font/roboto_bold"
                android:hint="Cari Pelanggan"
                android:inputType="textPersonName"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:paddingRight="20dp"
                android:paddingBottom="15dp"
                android:textColor="#636262"
                android:textColorHint="#636262"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/ib_search"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignTop="@+id/search_field"
                android:layout_alignBottom="@+id/search_field"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/border_search"
                android:src="@drawable/ic_search" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/container_ilustrasi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/iv_ilustrasi_pelanggankosong"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/tidak_ada_pelanggan"
                android:layout_marginTop="100dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/tv_pelanggan_kosong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Belum ada data pelanggan"
                android:textSize="12sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_below="@+id/iv_ilustrasi_pelanggankosong"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_pelanggan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical">

            </android.support.v7.widget.RecyclerView>

        </RelativeLayout>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_pelanggan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:backgroundTint="@color/colorBlue"
        android:elevation="6dp"
        android:src="@drawable/ic_add_white"
        app:borderWidth="0dp"
        app:fabSize="normal" />

</RelativeLayout>

