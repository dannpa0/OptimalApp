<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".fragment.SelesaiPembelianFragment">

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Riwayat Transaksi"
      android:layout_marginTop="10dp"
      android:textSize="20sp"
      android:textColor="@color/colorBlack"
      android:fontFamily="@font/roboto_bold"
      android:paddingLeft="20dp"
      android:paddingTop="15dp"
      android:paddingBottom="15dp"/>

  <RelativeLayout
      android:id="@+id/container_ilustrasi"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/iv_ilustrasi_pelanggankosong"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/tidak_ada_penjualan"
        android:layout_marginTop="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/tv_belum_ada_riwayat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Belum ada riwayat pembelian"
        android:textSize="12sp"
        android:fontFamily="@font/roboto_regular"
        android:layout_below="@+id/iv_ilustrasi_pelanggankosong"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_selesai_pembelian"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

    </android.support.v7.widget.RecyclerView>

  </RelativeLayout>

</LinearLayout>