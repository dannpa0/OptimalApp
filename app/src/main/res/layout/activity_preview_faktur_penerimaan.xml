<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".PreviewFakturPenerimaanActivity">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:elevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/im_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/ic_back" />


            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

        <TextView
            android:paddingLeft="15dp"
            android:id="@+id/faktur_anda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_regular"
            android:text="Faktur Anda"
            android:textColor="@color/colorBlue"
            android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:paddingLeft="15dp"
            android:id="@+id/telah_terunggah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/faktur_anda"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Telah Terunggah"
            android:textColor="@color/colorBlue"
            android:textSize="30sp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/faktur_anda"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/telah_terunggah"
            android:src="@drawable/ic_checkmark" />
    </LinearLayout>




        <ImageView
            android:layout_marginTop="12dp"
            android:layout_gravity="center"
            android:id="@+id/preview_faktur"
            android:layout_width="280dp"
            android:layout_height="380dp"
            android:background="@drawable/border_preview_gambar" />

        <TextView
            android:layout_gravity="center"
            android:id="@+id/nama_gambar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Faktur Penerimaan.jpg"
            android:textColor="@color/colorBlack"
            android:textSize="20sp" />


</LinearLayout>