<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_list_penjualan"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_margin="10dp"
    android:background="@drawable/container_barang"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingTop="4dp"
    android:paddingRight="16dp"
    android:paddingBottom="4dp">

    <ImageView
        android:id="@+id/im_icon_struk"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginRight="16dp"
        android:layout_weight="1"
        android:padding="4dp"
        android:src="@drawable/ic_struk" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/no_pesanan_pembelian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="OR/02082019/01"
            android:textAllCaps="false"
            android:textColor="@color/colorDarkGray"
            android:textSize="12sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/total_harga_pembelian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Rp. 215000"
            android:textAllCaps="false"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="right|center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/status_pembayaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="Lunas"
            android:textAllCaps="false"
            android:textColor="@color/colorBlack"
            android:textSize="10sp" />


        <TextView
            android:id="@+id/jam_pembelian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:text="18:20"
            android:textAllCaps="false"
            android:textColor="@color/colorDarkGray"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/tanggal_pembelian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:text="14 Agustus 2019"
            android:textAllCaps="false"
            android:textColor="@color/colorDarkGray"
            android:textSize="9sp" />


    </LinearLayout>

    <ImageView
        android:id="@+id/im_progress"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:src="@drawable/progress" />

</LinearLayout>
